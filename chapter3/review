	b. long double  %Le
	c. char 	%c
	d. long 	%ld
	e. char 	%c
	f. float 	%f
	g. unsigned 	%u

8. 
	int imate = 2; --> %d
	long shot = 53456; --> %ld
	char grade = 'A'; --> %c
	float log = 2.71828 --> %f	

